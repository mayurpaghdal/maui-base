<?xml version="1.0" encoding="utf-8" ?>
<controls:ChildView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:controls="clr-namespace:MauiAppDemo.Controls"
                    xmlns:vm="clr-namespace:MauiAppDemo.ViewModels"
                    x:Class="MauiAppDemo.Views.HomeView"
                    x:DataType="vm:HomeViewModel">
    <VerticalStackLayout Spacing="12">
        <Label 
            Text="Welcome to .NET MAUI this is home page.!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label Text="{Binding Title}"
               VerticalOptions="Center" 
               HorizontalOptions="Center" />
        
        <Button Text="Test Event Aggregation"
                HorizontalOptions="Center"
                Command="{Binding DoClickCommand}" />
    </VerticalStackLayout>
</controls:ChildView>
